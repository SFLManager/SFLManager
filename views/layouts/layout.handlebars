<!Doctype html>
<html>

<head>
    <meta charset=utf-8 />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SFL Manager</title>
    <!--JS Links -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <script src="/js/functions.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
    
</head>

<body onload="usernameOnLoad()">
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation"><a href="/users/login">Login</a></li>
                    <li role="presentation"><a href="/users/register">Register</a></li>
                    <li role="presentation"><a href="/users/logout">Logout</a></li>
                </ul>
            </nav>
            <h3 class="text-muted">SFL Manager</h3>
        </div>


        <div class="row">
            <div class="col-lg-12">
                {{#if success_msg}}
                <div class="alert alert-success">{{success_msg}}</div>
                {{/if}} {{#if error_msg}}
                <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}} {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
                {{/if}}
                <script src="/public/js/functions.js">
                    {
                        {
                            body
                        }
                    }

                </script>
                {{{body}}}
            </div>

        </div>



        <footer class="footer">
            <p>&copy; 2017 Maynooth University</p>
        </footer>

    </div>
    <!-- /container -->

</body>

</html>
